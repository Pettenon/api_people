<h1>Listing infos</h1>

<table>
  <tr>
    <th>Tag list</th>
    <th>Twitter username</th>
    <th>Birthplace</th>
    <th>Born year</th>
    <th>Born month</th>
    <th>Born day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @infos.each do |info| %>
  <tr>
    <td width="200"><%= info.tag_list %></td>
    <td width="200"><%= info.twitter_username %></td>
    <td width="200"><%= info.birthplace %></td>
    <td width="200"><%= info.born_year %></td>
    <td width="200"><%= info.born_month %></td>
    <td width="200"><%= info.born_day %></td>
    <td><%= link_to 'Show', info %></td>
    <td><%= link_to 'Edit', edit_info_path(info) %></td>
    <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

